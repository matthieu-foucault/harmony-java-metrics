<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="fr.labri.harmony.analysis.metrics">
	<union-subclass name="Metrics" extends="fr.labri.harmony.Data">
		<set name="metrics" cascade="save-update, delete, delete-orphan"
			lazy="true">
			<key column="metric_id" />
			<one-to-many class="Metric" />
		</set>
	</union-subclass>

	<class name="Metric">
		<id name="id">
			<generator class="native" />
		</id>

		<property name="name" />
		<property name="value" />
	</class>
</hibernate-mapping>